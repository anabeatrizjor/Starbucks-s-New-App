<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greenDark"
    android:theme="@style/Base.Theme.StarbuckssNewApp"
    tools:context=".CadastroActivity">

    <TextView
        android:id="@+id/tituloCadastro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cadastro"
        android:textSize="40sp"
        android:layout_margin="16dp"
        android:fontFamily="@font/lexend_deca"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/emailInputCadastro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Digite seu e-mail"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:padding="10dp"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/white"
        android:fontFamily="@font/lexend_deca"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/passwordInputCadastro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Digite sua senha"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:padding="10dp"
        android:inputType="textPassword"
        android:textColorHint="@color/white"
        android:fontFamily="@font/lexend_deca"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/ButtonLoginCadastro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Criar nova conta"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:padding="10dp"
        android:textColorHint="@color/white"
        android:fontFamily="@font/lexend_deca"
        android:backgroundTint="@color/greenVariant"/>

    <Button
        android:id="@+id/ButtonCadastroCadastro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="JÃ¡ tenho uma conta"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:padding="10dp"
        android:textColorHint="@color/white"
        android:fontFamily="@font/lexend_deca"
        android:backgroundTint="@color/greenVariant"/>

    <ImageView
        android:id="@+id/backArrowCadastro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/back_arrow"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="350dp"
        android:padding="10dp"
        android:layout_marginEnd="340dp"/>


</LinearLayout>
